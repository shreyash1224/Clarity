<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/beige_light">

    <item>
        <shape android:shape="rectangle">
            <!-- Border Color -->
            <stroke
                android:width="2dp"
                android:color="@color/button_brown"/>

            <!-- Background Color -->
            <solid android:color="@color/button_brown"/>

            <!-- Rounded Corners -->
            <corners android:radius="12dp"/>

            <!-- Padding for a neat look -->
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>
</ripple>
